{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.json", "src/**/*.js", "node_modules/vue3-ts-jsoneditor/dist/*.d.ts",],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"types": ["node", "naive-ui/volar"],
		"moduleResolution": "Bundler",
		"isolatedModules": true,
		"allowJs": true,
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
